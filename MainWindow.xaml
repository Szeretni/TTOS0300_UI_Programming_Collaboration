<Window x:Class="TTOS0300_UI_Programming_Collaboration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTOS0300_UI_Programming_Collaboration"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="400" Height="750" MinWidth="400" Width="750" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged" Background="{x:Null}">
    <Window.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource" CollectionViewType="ListCollectionView"/>
    </Window.Resources>
    <Grid x:Name="gridObj" Background="#FF787EFF">
        <Canvas x:Name="canvasObj" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="lblCurrentPlayer" Content="Player" HorizontalAlignment="Left" Margin="152,331,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCell" Content="CellId" HorizontalAlignment="Left" Margin="490,305,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCurrPlrId" Content="PlayerId" HorizontalAlignment="Left" Margin="152,305,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblDieResult" Content="DieResult" HorizontalAlignment="Left" Margin="156,279,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPreviousPosition" Content="PreviousPosition" HorizontalAlignment="Left" Margin="498,344,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCash" Content="Cash" HorizontalAlignment="Left" Margin="156,362,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.143,0.538"/>
        <Label x:Name="lblNotification" Content="Notifications" HorizontalAlignment="Left" Margin="351,175,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid1" DataContext="{StaticResource ItemCollectionViewSource}" ItemsSource="{Binding}" Margin="230,423,173,122"/>
        <DataGrid x:Name="dgCellTest" Margin="112,201,72,462" SelectionChanged="dgCellTest_SelectionChanged" />
        <Label x:Name="lblPosition" Content="Label" HorizontalAlignment="Left" Margin="156,257,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTest" DataContext="this" HorizontalAlignment="Left" Height="23" Margin="296,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnNewGame" Content="New Game" Height="23" Width="80" Margin="124,126,548,573" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnNewGame_Click"/>
    </Grid>
</Window>
